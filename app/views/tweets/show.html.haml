.header
  = render 'header_show'
.umain
  .umain__title
  .umain__box
    .umain__box__image
      = image_tag @tweet.image.to_s,size: '400x600'
    .umain__box__text
      .umain__box__text__title
        =@tweet.name
      .umain__box__text__content
        =simple_format @tweet.text
      .umain__box__text__name
        .umain__box__text__name__person 投稿者
        .umain__box__text__name__nickname
          =@tweet.user.nickname